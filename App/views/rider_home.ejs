<%- include('partials/header') %>
<%- include('partials/navbar_rider') %>
<h1>Delivery Riders Home</h1>
<p>Welcome, <%= username%>!</p>

<h2>Profile Details</h2>
<table class="table">
	<thead>
		<tr>
			<th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Ratings</th>
		</tr>
	</thead>
	<tbody>
        
		<tr>
			<td><%= name%></td>
            <td><%= username%></td>
			<td><%= ratingInfo[0].rating%></td>
		</tr>
	</tbody>
</table>

<h2>Work Details</h2>
<table class="table">
	<thead>
		<tr>
			<th scope="col">Year</th>
            <th scope="col">Month</th>
			<th scope="col">Orders Delivered</th>
			<th scope="col">Hours Worked</th>
		</tr>
	</thead>
	<tbody>
        <% for(var i=0; i< workdInfo.length; i++) { %>
		<tr>
			<td><%= workdInfo[i].year%></td>
			<td><%= workdInfo[i].month%></td>
			<td><%= workdInfo[i].com%></td>
			<td><%= workdInfo[i].hour%></td>
		</tr>
		<% } %>
	</tbody>
</table>


<%- include('partials/footer') %>