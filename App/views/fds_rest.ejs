<%- include('partials/header') %>
<%- include('partials/navbar_fds') %>

<!DOCTYPE html>
<html lang="en">

<body>

  <div class="container">
    <h1>FDS Manager Resturant</h1>
    <p>Welcome, <%= name%>!</p>
    <h2>Summary Information</h2>
    <form id="month_form" action="/fds_rest/selectMonth" role="form" method="POST">
      <div class="form-group">
        <label for="month">Select month:</label>
        <select class="form-control" id="month" name="month">
          <option value="1">January</option>
          <option value="2">February</option>
          <option value="3">March</option>
          <option value="4">April</option>
          <option value="5">May</option>
          <option value="6">June</option>
          <option value="7">July</option>
          <option value="8">August</option>
          <option value="9">September</option>
          <option value="10">October</option>
          <option value="11">November</option>
          <option value="12">December</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <p>Total Number of Orders: <%= numOrder%></p>
    <p>Total Cost of Order: <%= costOrder%></p>
  </div>

  <div class="container">
    <h2>Area Information</h2>
    <form id="area_form" action="/fds_rest/selectArea" role="form" method="POST">
      <div class="form-group">
        <label for="area">Select area:</label>
        <select class="form-control" id="area" name="area">
          <option value="N">North</option>
          <option value="S">South</option>
          <option value="E">East</option>
          <option value="W">West</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Area</th>
          <th scope="col">Hour</th>
          <th scope="col">Total Order</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i< areaInfo.length; i++) { %>
          <tr>
            <td><%= areaInfo[i].area%></td>
                  <td><%= areaInfo[i].hour%></td>
                  <!--IMPT: convert to small letters for the attribute name. -->
                  <!--In db, we may put minThreshold, but convert it to minthreshold to retrieve values-->
                  <td><%= areaInfo[i].num%></td>
          </tr>
          <% } %>
      </tbody>
    </table>

  </div>


  <div class="container">
    <h2>Available Categories</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Categories</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i< catInfo.length; i++) { %>
          <tr>
            <td><%= catInfo[i].category%></td>
          </tr>
          <% } %>
      </tbody>
    </table>


    <form id="cat_form" action="/fds_rest/add_cat" role="form" method="POST">
      <div class="form-group">
        <label >Add new catergory:</label>
        <input class="form-control" type="text" name="category"/>
    </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>


</body>

</html>


<%- include('partials/footer') %>