<%- include('partials/header') %>
<%- include('partials/navbar_fds') %>

<!DOCTYPE html>
<html lang="en">

<body>

  <div class="container">
    <h1>FDS Manager Resturant</h1>
    <p>Welcome, <%= name%>!</p>

    <h2>Select Date</h2>

    <form id="month_form" action="/fds_rest/selectdate" role="form" method="post">
      <div class="form-group">
        <input type="month" class="form-control" id="date" name="date">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

    <h2>Summary Information</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Year</th>
          <th scope="col">Month</th>
          <th scope="col">Total Number of Orders</th>
          <th scope="col">Total Cost of Orders</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < fdsAllRestInfo.length; i++) { %>
        <tr>
          <td><%= fdsAllRestInfo[i].year%></td>
          <td><%= fdsAllRestInfo[i].month%></td>
          <td><%= fdsAllRestInfo[i].totalorders%></td>
          <td><%= fdsAllRestInfo[i].totalcost%></td>
        <% } %>
      </tbody>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Year</th>
          <th scope="col">Month</th>
          <th scope="col">Resturant's ID</th>
          <th scope="col">Total Number of Orders</th>
          <th scope="col">Total Cost of Orders</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < fdsEachRestInfo.length; i++) { %>
        <tr>
          <td><%= fdsEachRestInfo[i].year%></td>
          <td><%= fdsEachRestInfo[i].month%></td>
          <td><%= fdsEachRestInfo[i].restaurantid%></td>
          <td><%= fdsEachRestInfo[i].totalorders%></td>
          <td><%= fdsEachRestInfo[i].totalcost%></td>
        <% } %>
      </tbody>
    </table>
   


</body>

</html>


<%- include('partials/footer') %>