<%- include('partials/header') %>
<%- include('partials/navbar_fds') %>

<!DOCTYPE html>
<html lang="en">

<body>

<div class="container">
  <h1>FDS Manager Customers</h1>
  <p>Welcome, <%= name%>!</p>
  <h2>Summary Information</h2>
  <form id = "month_form" action="/fds_cust/selectMonth" role ="form" method ="POST">
    <div class="form-group">
      <label for="month">Select month:</label>
      <select class="form-control" id="month" name="month">
        <option value = "1">January</option>
        <option value = "2">February</option>
        <option value = "3">March</option>
        <option value = "4">April</option>
        <option value = "5">May</option>
        <option value = "6">June</option>
        <option value = "7">July</option>
        <option value = "8">August</option>
        <option value = "9">September</option>
        <option value = "10">October</option>
        <option value = "11">November</option>
        <option value = "12">December</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <p>Number of Active Customers: <%= actCustomers%></p>
  <p>Number of New Customers: <%= newCustomers%></p>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Customer's ID</th>
        <th scope="col">Total Cost</th>
        <th scope="col">Total Order</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i< custInfo.length; i++) { %>
        <tr>
          <td><%= custInfo[i].customer%></td>
                <td><%= custInfo[i].totalcost%></td>
                <!--IMPT: convert to small letters for the attribute name. -->
                <!--In db, we may put minThreshold, but convert it to minthreshold to retrieve values-->
                <td><%= custInfo[i].num%></td>
        </tr>
        <% } %>
    </tbody>
  </table>
</div>

</body>
</html>


<%- include('partials/footer') %>